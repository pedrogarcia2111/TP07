@{
    ViewBag.Title = "Juego en Progreso";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Información del jugador y puntaje actual -->
            <div class="text-center mb-4">
                <h3>¡Hola, @ViewBag.Username!</h3>
                <p>Puntaje actual: <strong>@ViewBag.PuntajeActual</strong></p>
            </div>

            <!-- Pregunta y número de pregunta -->
            <div class="card shadow-sm p-4 mb-4">
                <h5 class="text-center">Pregunta <strong>@ViewBag.NumeroPreguntaActual</strong></h5>
                <h4 class="text-center">@ViewBag.PreguntaActual.Enunciado</h4>

                <!-- Mostrar imagen si existe -->
                @if (!string.IsNullOrEmpty(ViewBag.PreguntaActual.Foto))
                {
                    <div class="text-center mb-3">
                        <img src="@ViewBag.PreguntaActual.Foto" class="img-fluid rounded" alt="Imagen de la pregunta" />
                    </div>
                }
            </div>

            <!-- Formulario para seleccionar la respuesta -->
            <form method="post" asp-action="VerificarRespuesta">
                <div class="row">
                    @foreach (Respuesta respuesta in (List<Respuesta>)ViewBag.Respuestas)
                    {
                        <div class="col-md-6 mb-3">
                            <button type="submit" name="idRespuesta" value="@respuesta.IdRespuesta" class="btn btn-outline-primary w-100">
                                <!-- Mostrar imagen de la respuesta si existe -->
                                @if (!string.IsNullOrEmpty(respuesta.Foto))
                                {
                                    <img src="@respuesta.Foto" class="img-fluid mb-2 rounded" alt="Imagen de respuesta" />
                                }
                                <div>@respuesta.Opcion</div> <!-- Usando 'Opcion' en lugar de 'Texto' -->
                            </button>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
