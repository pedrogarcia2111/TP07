@{
    ViewBag.Title = "Juego en Progreso";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center mb-4">
                <h3>Â¡Hola!</h3>
                <p>Puntaje actual: <strong>@ViewBag.PuntajeActual</strong></p>
            </div>

            <div class="card shadow-sm p-4 mb-4">
                <h4 class="text-center">@ViewBag.Pregunta.Enunciado</h4>

               
            </div>

            <form method="post" asp-action="VerificarRespuesta">
                <div class="row">
                    @foreach (Respuesta respuesta in ViewBag.Respuestas)
                    {
                        <div class="col-md-6 mb-3">
                            <button type="submit" name="idRespuesta" value="@respuesta.IdRespuesta" class="btn btn-outline-primary w-100">
                                
                                <div>@respuesta.Contenido</div>
                            </button>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
