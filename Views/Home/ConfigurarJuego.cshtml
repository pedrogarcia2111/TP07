@{
    ViewBag.Title = "Juego";
}

<h2>Pregunta @ViewBag.NumeroPregunta</h2>
<p>Usuario: @ViewBag.Username</p>
<p>Puntaje: @ViewBag.PuntajeActual</p>

<div>
    <p><strong>@ViewBag.Pregunta.Enunciado</strong></p>

    <form asp-action="VerificarRespuesta" method="post">
        @foreach (var respuesta in ViewBag.Respuestas) {
            <div>
                <input type="radio" id="respuesta-@respuesta.Id" name="idRespuesta" value="@respuesta.Id" required />
                <label for="respuesta-@respuesta.Id">@respuesta.Texto</label>
            </div>
        }
        <input type="hidden" name="idPregunta" value="@ViewBag.Pregunta.Id" />
        <button type="submit" class="btn btn-primary">Responder</button>
    </form>
</div>
